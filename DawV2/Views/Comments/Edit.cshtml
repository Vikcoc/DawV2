@model DawV2.Models.Comment

@{
    ViewBag.Title = "Editeaza comentariu";
}

<h2> @ViewBag.Title </h2>
<form method="post" action="/Comments/Edit/@Model.CommentId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.PostId, Model.PostId)

    @Html.Label("Content", "Comentariu") <br />
    @Html.Editor("Content") <br /> <br />
    <button class="btn btn-success" type="submit"> Editeaza comentariul </button>
</form>
<hr />
<a class="btn btn-primary" href="/Posts/Show/@Model.PostId"> Inapoi la postare </a>